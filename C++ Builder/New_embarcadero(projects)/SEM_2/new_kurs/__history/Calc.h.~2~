//---------------------------------------------------------------------------

#ifndef CalcH
#define CalcH
#include <vcl.h>
#include "Form.h"
//---------------------------------------------------------------------------

class Calc{
public:
Calc(){}
Calc(const int &rows, TStringGrid *Grid ){
arr = new float*[rows];
for (int i = 0; i < rows; i++)
   {
	 arr[i] = new float[rows];
   }

   for (int i = 1; i <= rows; i++)
   { for (int j = 1; j <= rows; j++)
		{
		  arr[i][j] = StrToFloat(Grid->Cells[i][j]);
		}

   }


}


private:
float **arr;






};

#endif
