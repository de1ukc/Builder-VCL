#pragma hdrstop
#pragma argsused

#ifdef _WIN32
#include <tchar.h>
#else
  typedef char _TCHAR;
  #define _tmain main
#endif

#include <stdio.h>
#include <conio.h>
#include <iostream>
#include <math.h>


using namespace std;




int _tmain(int argc, _TCHAR* argv[]) 
{  system ("chcp 1251>nul") ;
   int N;
   cout<<"введите размер массива N*N, N = ";
   cin>>N;
   int **arr = new int*[N]; // создание массива указателей
   for (int i = 0; i < N/*строки*/; i++)   //создание массивов одномерныХ, на которые указывают указатели
	  { arr[i] = new int [N/*колонки*/];

	  }


   for (int i = 0; i < N; i++)
	  { for (int j = 0; j < N; j++)
		   { arr[i][j]=rand()%2;

		   }

	  }


     for (int i = 0; i < N; i++)
	  { for (int j = 0; j < N; j++)
		   { cout<<arr[i][j]<<"\t";

		   } cout<<endl;

	  }







	for (int i = 0; i < N /*строки*/; i++)
	   {
		 delete [] arr[i]; /* удаляем одномерные массивы , на которые указывают указатели*/
	   }


   delete [] arr; /* удаляем массив иуказателей*/
   getch(); return 0;
}
