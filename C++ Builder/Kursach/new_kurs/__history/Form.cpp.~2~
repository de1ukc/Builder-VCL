void zerocheck(const int n, TStringGrid *Grid )
{ for (int i = 0; i < n; i++)
	 { for (int j = 0; j < n; j++)
		  { if (Grid->Cells[i][j].IsEmpty())
			  { Grid->Cells[i][j] = FloatToStr(0);

			  }

		  }

	 }
}
