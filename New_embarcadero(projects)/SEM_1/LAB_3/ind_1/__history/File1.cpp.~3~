#endif

//#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <iostream>
using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{ float Y,S,x;
int f,N=1,n;


cout<<"kolichestvo chlenov ryada , n= ";
cin>>n;
cout<<"vvedite kolichestvo iksov - ";
cin>>f;




 for (int i = 1; i <= n; i++) {
  N *= i;

 } cout<<"n!= "<<N<<endl;
 for (int b = 0; b < f; b++) {
	   cout<<" viberite x ot 0.1 do 1 , x= ";
	   cin>>x;

	   S=1+3*x*x+(2*n+1)*pow(x,2*n)/N;
	   Y=(1+2*pow(x,2))*exp(x*x);
	   cout<<"S= "<<S<<"\t"<<"Y= "<<Y<<endl;

  }
 getch();	return 0;
}



























