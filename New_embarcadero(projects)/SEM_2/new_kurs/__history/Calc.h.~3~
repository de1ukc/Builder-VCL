class Calc{
public:
Calc(){}
Calc(const int &rows, TStringGrid *Grid ){
this->rows = rows;
arr = new float*[rows];
for (int i = 0; i < rows; i++)
   {
	 arr[i] = new float[rows];
   }

   for (int i = 0; i < rows; i++)
   { for (int j = 0; j < rows; j++)
		{
		  arr[i][j] = StrToFloat(Grid->Cells[i][j]);
		}

   }

}

 /*
????????????????????????????????????????????????
~Calc(){
for (int i = 1; i <= rows ; i++)
	   {
		 delete [] arr[i];
	   }
	delete [] arr;                доступ не в свою память
}
?????????????????????????????????????????????
*/
 /*
